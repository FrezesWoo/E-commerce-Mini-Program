<div class="page-header">
  <h1> <%= t('slides.page_title') %> </h1>
</div>

<div class="container">
  <div class='row'>
    <dl>
      <dt><%= t('slides.name') %> </dt>
      <dd><%= @slide.name %></dd>
    </dl>
  </div>
</div>

<div class="container page-control">
  <%= link_to t('back'), slides_path, class: 'back' %> |
  <% if current_user.is_editor %>
    <%= link_to raw("<i class='material-icons'>create</i><span>#{t('edit')}</span>"), edit_slide_path(@slide) %> |
  <% end %>
</div>
