<div id="accordion1" role="tablist">
  <div class="card card-collapse">
    <div class="card-header" role="tab" id="headingOne">
      <h5 class="mb-0">
        <a data-toggle="collapse" href="#collapseProducts" aria-expanded="false" aria-controls="collapseProducts">
          <i class='material-icons'>images</i> <%= t('page_blocks.blocks.slides.title') %>
          <i class="material-icons">keyboard_arrow_down</i>
        </a>
      </h5>
    </div>

    <div id="collapseProducts" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion1">
      <div class="card-body">
        <%= form.fields_for :slides do |slide| %>
          <%= render 'slide_fields', f: slide%>
        <% end %>

        <div class="links add-new-icone">
          <%= link_to_add_association raw("<i class='material-icons'>add_circle</i><span>#{t('pages.blocks.slides.add')}</span>"), form, :slides %>
        </div>
      </div>
    </div>
  </div>
</div>
