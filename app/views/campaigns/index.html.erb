<div class="page-header">
  <h1>  <%=  t('campaigns.listing') %> </h1>
</div>

<div class="table-responsive">
  <table class="table table-fixed table-white table-hover">
    <thead>
    <tr>
      <th width="40%"><%= t('campaigns.name') %></th>
      <th width="20%"> <%= t('show')%> </th>
      <th width="20%"> <%= t('edit')%> </th>
      <th width="20%"> <%= t('delete')%> </th>
    </tr>
    </thead>

    <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td width="40%"><%= campaign.name %> </td>
        <td width="20%"><i class="material-icons small">visibility</i><%= link_to 'Show', campaign %></td>
        <td width="20%"><i class="material-icons small">create</i><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td width="20%"><i class="material-icons small">clear</i><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<% if current_user.is_editor %>
  <%= link_to raw("<i class='material-icons'>add_circle</i><span>#{t('campaigns.new')}</span>"), new_campaign_path, data: { 'no-turbolink' => true} %>
<% end %>
