<div class="page-header">
  <h1> <%= t('campaigns.page_title') %> </h1>
</div>

<div class="container">
  <div class='row'>
    <dl>
      <dt><%= t('campaigns.name') %> </dt>
      <dd><%= @campaign.name %></dd>
    </dl>
  </div>
</div>

<div class="container page-control">
  <%= link_to t('back'), campaigns_path, class: 'back' %> |
  <% if current_user.is_editor %>
    <%= link_to raw("<i class='material-icons'>create</i><span>#{t('edit')}</span>"), edit_campaign_path(@campaign) %> |
  <% end %>
</div>
