<%= form_with(model: country_province, id: 'cust-form', local: true) do |form| %>
  <% if country_province.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(country_province.errors.count, "error") %> prohibited this province from being saved:</h2>

      <ul>
      <% country_province.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, t('provinces.name') %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :latitude, t('provinces.latitude') %>
    <%= form.number_field :latitude, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :longitude, t('provinces.longitude') %>
    <%= form.number_field :longitude, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :country_id, t('provinces.country') %>
    <%= form.collection_select(:country_id, Country.all, :id, :name, {}, {:class=>'form-control selectpicker', :dataStyle => "btn btn-link", :id => "exampleFormControlSelect1"} )%>
  </div>

  <div class="actions">
    <%= form.submit t('submit'), :class => 'btn btn-primary' %>
  </div>
<% end %>
