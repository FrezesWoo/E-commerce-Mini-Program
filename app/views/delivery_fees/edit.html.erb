<%= render 'layouts/location_navbar' %>

<h1><%= t('delivery_fee.edit') %> </h1>

<div class="container">
  <div class='row'>
    <%= render 'form', delivery_fee: @delivery_fee %>
  </div>
</div>

<div class="container page-control">
  <%= link_to t('back'), delivery_fees_path, class: 'back' %> |
  <%= link_to raw("<i class='material-icons'>visibility</i><span>#{t('show')}</span>"), @delivery_fee %> |
  <% if current_user.is_editor %>
    <%= link_to raw("<i class='material-icons'>add_circle</i><span>#{t('page_blocks.new')}</span>"), new_delivery_fee_path, data: { 'no-turbolink' => true} %>
  <% end %>
</div>
