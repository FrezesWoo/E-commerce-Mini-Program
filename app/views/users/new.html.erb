<div class="page-header">
  <h3> <%=  t('user.create') %> </h3>
</div>

<div class="container">
  <div class='row'>
    <%= form_for @user, url: {action: "create"}, class: 'create_new_user', :method => :POST, html: { multipart: true } do |f| %>

      <div class="form-group">
        <%=  t('user.name') %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%=  t('user.password') %>
        <%= f.text_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%=  t('user.phone') %>
        <%= f.text_field :phone, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%=  t('user.email') %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%=  t('user.role') %>
        <%= collection_select(:user, :user_role_id, User::Role.all, :id, :name, {}, {:class=>'form-control selectpicker', :dataStyle => "btn btn-link", :id => "exampleFormControlSelect1"} ) %>
      </div>

      <div class="form-group">
        <%= f.submit  t('submit'), :class => 'btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>
