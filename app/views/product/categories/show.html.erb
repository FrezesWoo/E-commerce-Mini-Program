<%= render 'layouts/product_navbar' %>

<div class="page-header">
  <h1> <%= t('product_categories.page_title') %> </h1>
</div>

<div class="container">
  <div class='row'>
    <dl>
      <dt><%= t('product_categories.name') %> </dt>
      <dd><%= @product_category.name %></dd>
      <dt><%= t('product_categories.ordering') %> </dt>
      <dd><%= @product_category.ordering %></dd>
    </dl>
  </div>
</div>

<div class="container page-control">
  <%= link_to t('back'), product_categories_path, class: 'back' %> |
  <% if current_user.is_editor %>
    <%= link_to raw("<i class='material-icons'>create</i><span>#{t('edit')}</span>"), edit_product_category_path(@product_category) %> |
    <%= link_to raw("<i class='material-icons'>add_circle</i><span>#{t('new')}</span>"), new_product_category_path, data: { 'no-turbolink' => true} %>
  <% end %>
</div>
