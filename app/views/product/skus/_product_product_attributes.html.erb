<p>
  <a class="btn btn-primary" data-toggle="collapse" href="#collapseBlocks" aria-expanded="true" aria-controls="collapseExample">
    <i class="material-icons">apps</i> <%= t('skus.product_attribute.name') %>
  </a>
</p>
<div class="collapse show" id="collapseBlocks">
  <div class="card card-body">
    <div id="blocks">
      <div id="accordion" role="tablist">
        <%= form.fields_for :product_product_attributes_skus do |product_product_attributes_sku| %>
          <div class="card card-collapse">
            <div class="card-header" role="tab" id="headingOne">
              <h5 class="mb-0">
                <a data-toggle="collapse" href="#collapse<%= product_product_attributes_sku.index %>" aria-expanded="true" aria-controls="collapse<%= product_product_attributes_sku.index %>">
                  Block <%= product_product_attributes_sku.index + 1 %>
                  <i class="material-icons">keyboard_arrow_down</i>
                </a>
              </h5>
            </div>
            <div id="collapse<%= product_product_attributes_sku.index %>" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
              <div class="card-body">
                <%= render 'product_product_attributes_sku_fields', f: product_product_attributes_sku, index: product_product_attributes_sku.index %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="links add-new-icone">
        <%= link_to_add_association raw("<i class='material-icons'>add_circle</i><span>#{t('articles.blocks.add')}</span>"), form, :product_product_attributes_skus %>
      </div>
    </div>
  </div>
</div>
